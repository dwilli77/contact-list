<p id="notice"><%= notice %></p>

<h1 id="admin-button">Track 1 Burleson Families</h1>

<table>
  <thead>
    <tr>
      <th>Child</th>
      <th>Parent(s) name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th colspan="3"  class="admin none"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= family.kid %></td>
        <td><%= family.parent_name %></td>
        <td><%= family.last_name %></td>
        <td><%= family.email %></td>
        <td><%= family.phone_number %></td>
        <td class="admin none"><%= link_to 'Show', family %></td>
        <td class="admin none"><%= link_to 'Edit', edit_family_path(family) %></td>
        <td class="admin none"><%= link_to 'Destroy', family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Family', new_family_path, class: "admin none new-family" %>
